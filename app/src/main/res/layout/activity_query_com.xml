<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_query_per2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xaqb.policenw.QueryPerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="品        牌："
            android:textColor="#000000"
             />


        <EditText
            android:id="@+id/et_coms_com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10px"
            android:hint="请选择品牌编码"
            android:paddingLeft="10px"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textview_smalls_size" />

        <ImageView
            android:id="@+id/iv_clear_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding"
            android:visibility="gone"
            android:src="@mipmap/clean"/>

        <ImageView
            android:id="@+id/iv_coms_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/searchx48"/>

    </LinearLayout>
    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/padding">

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="企        业："
            android:textColor="#000000"
             />

        <EditText
            android:id="@+id/et_com_com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10px"
            android:hint="请输入企业名称"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textview_smalls_size" />


    </LinearLayout>
    <LinearLayout style="@style/common_horizontal_division_line_style" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/padding">

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="管辖机构："
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/et_org_com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10px"
            android:hint="请选择管辖机构"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textview_smalls_size" />


        <ImageView
            android:id="@+id/iv_clear_org_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding"
            android:visibility="gone"
            android:src="@mipmap/clean"/>

        <ImageView
            android:id="@+id/iv_org_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/searchx48"/>


    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:padding="10dp">
    </LinearLayout>


    <Button
        android:id="@+id/bt_query_com"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_selector"
        android:padding="10dp"
        android:text="查询"
        android:textColor="#ffffff"
        />

</LinearLayout>
